#include <iostream>
using namespace std;
int readnumber(string message) {
    int number = 0;
    do {
        cout << message << endl;
        cin >> number;
    } while (number < 0);
    return number;
}
void printpattren() {
    int number = readnumber("Enter number ");
    for (int i = 1; i <=number;i++) {
        for (int j = 0;j< i;j++) {
            cout << i;
        }cout<<endl;
    }
}
int main()
{

    printpattren();
}
